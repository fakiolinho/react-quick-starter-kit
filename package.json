{
  "name": "react-quick-starter-kit",
  "version": "1.0.0",
  "description": "React starter kit without having to remove more than 50% of code to build a Single Page Application prototype",
  "main": "./dist/index.js",
  "author": {
    "name": "Fakiolas Marios",
    "email": "m.fakiolas@hotmail.gr",
    "url": "https://about.me/marios.fakiolas"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "cross-env NODE_ENV=production babel ./server -d ./dist",
    "build:client": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.production.config.js --color --progress",
    "predeploy": "npm run build",
    "deploy": "cross-env NODE_ENV=production node dist/index.js",
    "start": "cross-env NODE_ENV=development nodemon --debug server --ignore dist/ --exec babel-node",
    "test": "cross-env NODE_ENV=test jest",
    "eslint": "eslint client --color",
    "eslint:fix": "esw client --fix --watch --color",
    "clean": "npm prune && npm i",
    "stylelint": "stylelint -c .stylelintrc client/**/*.scss",
    "preanalyze": "cross-env NODE_ENV=production webpack --config webpack/webpack.production.config.js --colors --profile --json > stats.json && mv stats.json ./dist",
    "analyze": "webpack-bundle-analyzer ./dist/stats.json ./dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "travis": "npm run build && npm test && npm run coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fakiolinho/react-quick-starter-kit.git"
  },
  "keywords": [
    "react",
    "redux",
    "redux-thunk",
    "jest",
    "enzyme",
    "express",
    "webpack",
    "babel"
  ],
  "license": "MIT",
  "dependencies": {
    "bem-cn": "^2.1.3",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "express": "^4.15.2",
    "express-history-api-fallback": "^2.1.0",
    "isomorphic-fetch": "^2.2.1",
    "normalize.css": "^6.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "webpack": "^2.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-2": "^6.22.0",
    "coveralls": "^2.13.0",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "cssnano": "^3.10.0",
    "enzyme": "^2.8.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "eslint-watch": "^3.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "nock": "^9.0.11",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.3.3",
    "react-addons-test-utils": "^15.4.2",
    "redux-mock-store": "^1.2.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-order": "^0.4.2",
    "stylelint-scss": "^1.4.3",
    "webpack": "^2.3.2",
    "webpack-bundle-analyzer": "^2.3.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-merge": "^4.1.0"
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "moduleDirectories": [
      "node_modules",
      "client"
    ],
    "bail": true,
    "verbose": true,
    "testRegex": "\\.(test|spec)\\.(js|jsx)$",
    "collectCoverage": true
  }
}
